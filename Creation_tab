CREATE TABLE RESERVATION(
	IDClient INT(8) UNIQUE NOT NULL,
	IDHotel INT(8) UNIQUE NOT NULL,
    NumeroChambre INT(3) UNIQUE NOT NULL, 
    Date DATE NOT NULL CHECK(Date <= CURRENT_DATE),
    Paye BOOLEAN NOT NULL,
    
    CONSTRAINT pk_Reservation PRIMARY KEY (IDClient, IDHotel, NumeroChambre, Date),
    CONSTRAINT fk_Res_Client FOREIGN KEY (IDClient) ON DELETE CASCADE ON UPDATE CASCADE,
    CONSTRAINT fk_Res_Chambre FOREIGN KEY (NumeroChambre) ON DELETE CASCADE ON UPDATE CASCADE,
    CONSTRAINT fk_Res_Hotel FOREIGN KEY (IDHotel) ON DELETE CASCADE ON UPDATE CASCADE);
